# Universidad Repositorio - Variables de Entorno
# Copia este archivo como .env y modifica los valores según tu configuración

# ============================================================================
# CONFIGURACIÓN DJANGO
# ============================================================================

# Django Settings
DEBUG=True
SECRET_KEY=tu-clave-secreta-muy-larga-y-segura-cambiar-en-produccion
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# BASE DE DATOS POSTGRESQL
# ============================================================================

DB_NAME=universidad_repositorio
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# REDIS Y CACHE
# ============================================================================

REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# CORS Y SEGURIDAD
# ============================================================================

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# ============================================================================
# ALMACENAMIENTO AWS S3 (OPCIONAL)
# ============================================================================

AWS_ACCESS_KEY_ID=tu-aws-access-key-id
AWS_SECRET_ACCESS_KEY=tu-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=universidad-repositorio-files
AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# SERVICIO DE IA
# ============================================================================

AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TOKEN=tu-ai-service-token-opcional

# ============================================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@ejemplo.com
EMAIL_HOST_PASSWORD=tu-password-de-email

# ============================================================================
# CONFIGURACIÓN DE LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=/var/log/django/app.log

# ============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# ============================================================================

MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_PDF_EXTENSIONS=pdf

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================

SECURE_SSL_REDIRECT=False  # Cambiar a True en producción
SESSION_COOKIE_SECURE=False  # Cambiar a True en producción
CSRF_COOKIE_SECURE=False  # Cambiar a True en producción

# ============================================================================
# CONFIGURACIÓN DE IA Y ML
# ============================================================================

# Modelo de embedding (no cambiar a menos que sepas lo que haces)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Número máximo de resultados en búsqueda
MAX_SEARCH_RESULTS=20

# Umbral de similitud para recomendaciones
SIMILARITY_THRESHOLD=0.3

# ============================================================================
# CONFIGURACIÓN DE MONITOREO
# ============================================================================

# URL de Sentry para monitoreo de errores (opcional)
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/project-id

# Configuración de métricas (opcional)
PROMETHEUS_METRICS_ENABLED=False

# ============================================================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================================================

# Habilitar Django Debug Toolbar (solo desarrollo)
DEBUG_TOOLBAR_ENABLED=False

# Habilitar Django Extensions
DJANGO_EXTENSIONS_ENABLED=True

# ============================================================================
# CONFIGURACIÓN DE BACKUP
# ============================================================================

# Directorio para backups
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# CONFIGURACIÓN DE TASK QUEUES
# ============================================================================

# Número de workers de Celery
CELERY_WORKER_CONCURRENCY=4

# Timeout para tareas de IA (en segundos)
AI_PROCESSING_TIMEOUT=300

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================

# 1. NUNCA commitear este archivo con valores reales al repositorio
# 2. En producción, cambiar DEBUG=False y usar claves seguras
# 3. Configurar SSL/TLS para producción
# 4. Usar variables de entorno del sistema en lugar de archivos .env
# 5. Configurar backup automático de la base de datos
# 6. Configurar monitoreo y logging apropiados